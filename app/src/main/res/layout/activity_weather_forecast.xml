<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather_forecast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jieli.lab1.WeatherForecast">

    <TextView
        android:text="Current Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_temp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="Min Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min_temp"
        android:layout_below="@+id/current_temp"
        android:layout_alignEnd="@+id/max_temp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:text="Max Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/max_temp"
        android:layout_below="@+id/min_temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="@android:color/holo_orange_dark" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_Bar"
        android:visibility="invisible"
        android:layout_below="@+id/max_temp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:maxHeight="30dip"
        android:minHeight="30dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:id="@+id/weatherIcon"
        android:layout_above="@+id/current_temp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
